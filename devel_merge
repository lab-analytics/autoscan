    "tag = 'sh_001'\n",
    "instance = 'before'\n",
    "\n",
    "# set datapath\n",
    "datapath = os.path.join(basepath, asdatapath)\n",
    "\n",
    "pp = autoscan.postprocess(labutilspath=labutilspath)\n",
    "pp.debug = False"
   ]
